{% block content %}
    <div class="contact-us mt-5" id="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="contact-us-content bg-light">
            <div class="row">
              <div class="col-lg-4">
                <div id="map"  data-aos="zoom-in">
                </div>
              </div>
              <div class="col-lg-8">
                <form id="contact-form" action="" method="post">
                  <div class="row">
                    <div class="col-lg-12">
                      <div class="section-heading">
                        <h2 class="fs-2"  data-aos="zoom-in"><em class="text-primary fw-bolder">Contactez-nous</em> &amp; Entrez en <span class="text-secondary">Contact</span></h2>
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                        <input class="text-secondary border border-info fs-6"  data-aos="slide-right" type="text" name="firstname" id="firstname" placeholder="Votre prénom..." autocomplete="on" required>
                      </fieldset>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                        <input class="text-secondary border border-info fs-6"  data-aos="slide-left"  type="text" name="lastname" id="lastname" placeholder="Votre nom de famille..." autocomplete="on" required>
                      </fieldset>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                        <input class="text-secondary border border-info fs-6"  data-aos="slide-right"  type="email" name="email" id="email" placeholder="Votre email..." required>
                      </fieldset>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                        <input class="text-secondary border border-info fs-6"  data-aos="slide-left"  type="text" name="titre" id="titre" placeholder="Sujet..." autocomplete="on" required>
                      </fieldset>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                        <input class="text-secondary border border-info fs-6"  data-aos="slide-right"  type="text" name="phone" id="phone" placeholder="Numéro de téléphonne..." pattern="^[0-9\s\./]*$" autocomplete="on" required>
                      </fieldset>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                        <input class="text-secondary border border-info fs-6"  data-aos="slide-left"  type="text" name="postal" id="postal" placeholder="Code postal..." pattern="^[0-9]{4}$" autocomplete="on" required>
                      </fieldset>
                    </div>
                    <div class="col-lg-12">
                      <fieldset>
                        <textarea class="text-secondary border border-info fs-6"  data-aos="zoom-in" name="message" id="message" placeholder="Votre message..." required></textarea>
                      </fieldset>
                    </div>
                    <div class="col-lg-12">
                      <fieldset>
                        <button type="submit" id="form-submit" class="btn btn-info fs-5 fw-bolder"  data-aos="zoom-in">Envoyer mon message</button>
                      </fieldset>
                    </div>
                  </div>
                </form>
                <div class="more-info">
                  <div class="row">
                    <div class="col-lg-4">
                      <div class="info-item">
                        <i class="fa fa-phone" data-aos-offset="0" data-aos="zoom-in-down"></i>
                        <h4  data-aos="fade-down" data-aos-offset="0"><a href="#" class="fw-bold">Tel: 02 542 63 21</a></h4>
                        <h4  data-aos="fade-down" data-aos-offset="0"><a href="#" class="fw-bold">GSM: 0476/68.07.93 </a></h4>
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="info-item">
                        <i class="fa fa-envelope" data-aos-offset="0" data-aos="zoom-in-down"></i>
                        <h4  data-aos="fade-down" data-aos-offset="0"><a href="#" class="fw-bold">contact@mlsg.be</a></h4>
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="info-item">
                        <i class="fa fa-map-marker" data-aos-offset="0" data-aos="zoom-in-down"></i>
                        <h4 data-aos-offset="0" data-aos="fade-down"><a href="#" class="fw-bold">Chaussée de Waterloo 255 (2e étage), 1060 Saint-Gilles</a></h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
